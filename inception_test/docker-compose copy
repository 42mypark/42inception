version: "3.0"
    
services:
  db:
    image: mysql:5.7
    volumes:
      - db_data:/var/lib/mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: somephp-fpm
      MYSQL_DATABASE: php-fpm
      MYSQL_USER: php-fpm
      MYSQL_PASSWORD: php-fpm
    
  php-fpm:
    depends_on:
      - db
    image: php-fpm:latest
    volumes:
      - php-fpm_data:/var/www/html
    ports:
      - "8000:80"
    restart: always
    environment:
      php-fpm_DB_HOST: db
      php-fpm_DB_USER: php-fpm
      php-fpm_DB_PASSWORD: php-fpm
      php-fpm_DB_NAME: php-fpm
volumes:
  db_data: {}
  php-fpm_data: {}